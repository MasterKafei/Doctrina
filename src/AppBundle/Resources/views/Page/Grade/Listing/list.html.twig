{% extends '@Layout/Page/Full/base.html.twig' %}

{% block sub_title %}{{ 'tab_sub_title.grades'|trans({}, 'label') }}{% endblock sub_title %}

{% block content %}
    <div class="content">
        <div class="container">
            <div class="row pt-5">
                <div class="col-md-12">
                    <h1 class="text-center pb-5 big-title">{{ 'course.title'|trans({}, 'messages') }}</h1>
                </div>
            </div>
        </div>
        <div class="level-wrapper">
            {% for grade in grades %}
                <a href="{{ path('app_grade_showing_show', {'id': grade.id}) }}">
                    <div class="level-item" style="background-image: url('{{ vich_uploader_asset(grade, 'image') }}');">
                        <div class="row align-items-center h-100">
                            <div class="col-12 text-center mx-auto">
                                <span>{{ grade.name }}</span>
                            </div>
                        </div>
                    </div>
                </a>
            {% endfor %}
        </div>
    </div>
{% endblock content %}