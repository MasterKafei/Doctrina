{% extends '@Layout/Page/Full/base.html.twig' %}

{% block body %}
    {% embed '@Layout/Component/Box/box.html.twig' %}

        {% block head %}
            {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}
        {% endblock %}

        {% block header %}
            <h3 class="box-title">Create a new group</h3>
        {% endblock %}

        {% block body %}
            <div class="form-group">
                <label class="col-sm-2 control-label">{{ form_label(form.name) }}</label>
                <div class="col-sm-10">
                    {{ form_widget(form.name, {'attr': {'class': 'form-control'}}) }}
                </div>
            </div>
            <div class="form-group">
                <label for="inputPassword3" class="col-sm-2 control-label">{{ form_label(form.description) }}</label>
                <div class="col-sm-10">
                    {{ form_widget(form.description, {'attr': {'class': 'form-control'}}) }}
                </div>
            </div>
        {% endblock %}

        {% block footer %}
            {{ form_widget(form.save, {'attr': {'class': 'btn btn-info pull-right'}}) }}
        {% endblock %}

        {% block foot %}
            {{ form_end(form) }}
        {% endblock %}

    {% endembed %}
{% endblock %}