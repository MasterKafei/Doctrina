{% extends '@Layout/Full/base.html.twig' %}

{% block body %}
    <div class="box box-info">
        <div class="box-header with-border">
            <h3 class="box-title">Create a new group</h3>
        </div>
        {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}
        <div class="box-body">
            <div class="form-group">
                <label class="col-sm-2 control-label">{{ form_label(form.name) }}</label>
                <div class="col-sm-10">
                    {{ form_widget(form.name, {'attr': {'class': 'form-control'}}) }}
                </div>
            </div>
            <div class="form-group">
                <label for="inputPassword3" class="col-sm-2 control-label">{{ form_label(form.description) }}</label>
                <div class="col-sm-10">
                    {{ form_widget(form.description, {'attr': {'class': 'form-control'}}) }}
                </div>
            </div>
        </div>

        <div class="box-footer">
            {{ form_widget(form.save, {'attr': {'class': 'btn btn-info pull-right'}}) }}
        </div>

        {{ form_end(form) }}
    </div>
{% endblock %}