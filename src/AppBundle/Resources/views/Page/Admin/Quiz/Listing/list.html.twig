{% extends '@Layout/Full/base.html.twig' %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('assets/vendor/datatables.net-bs/css/dataTables.bootstrap.min.css') }}">
{% endblock %}

{% block body %}
    <div class="box">
        <div class="box-header with-border">
            <h3 class="box-title">Quizzes</h3>
        </div>

        <div class="box-body">
            <div class="col-sm-12">
                <table id="quiz-table-listing" class="table table-bordered table-striped dataTable" role="grid"
                       aria-describedby="quiz-table-listing_info">
                    <thead>
                        <tr role="row">
                            <th class="sorting_asc" tabindex="0" aria-controls="quiz-table-listing" rowspan="1" colspan="1"
                                aria-sort="ascending" aria-label="Title(s): activate to sort column descending"
                                style="width: 235px;">Title</th>
                            <th class="sorting_asc" tabindex="0" aria-controls="quiz-table-listing" rowspan="1" colspan="1"
                                aria-sort="ascending" aria-label="Description(s): activate to sort column descending"
                                style="width: 350px;">Description</th>
                            <th class="sorting_asc" tabindex="0" aria-controls="quiz-table-listing" rowspan="1" colspan="1"
                                aria-sort="ascending" aria-label="Question(s) number: activate to sort column descending"
                                style="width: 200px;">Status</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for quiz in quizzes %}
                            <tr role="row" class="odd">
                                <td class="sorting_1">{{ quiz.title }}</td>
                                <td>{{ quiz.description }}</td>
                                <td>
                                    {% if quiz.startingDate is null or quiz.startingDate < date('now') %}
                                        {% if quiz.endingDate is null or quiz.endingDate > date('now') %}
                                            In progress
                                        {% else %}
                                            Closed
                                        {% endif %}
                                    {% else %}
                                        Planned
                                    {% endif %}
                                </td>
                                <td>
                                    <div class="btn-group">
                                        <a href="{{ path('app_admin_quiz_show_showing', {'id': quiz.id}) }}" class="btn btn-info">List <i class="fa fa-list"></i></a>
                                        <a href="{{ path('app_admin_quiz_edit_edition', {'id': quiz.id}) }}" class="btn btn-info">Edit <i class="fa fa-edit"></i></a>
                                        <a href="{{ path('app_admin_quiz_remove_removable', {'id': quiz.id}) }}" class="btn btn-info">Remove <i class="fa fa-trash"></i></a>
                                    </div>
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    <script src="{{ asset('assets/vendor/datatables.net/js/jquery.dataTables.js') }}"></script>
    <script src="{{ asset('assets/vendor/datatables.net-bs/js/dataTables.bootstrap.min.js') }}"></script>
    <script>
        $(function () {
            $('#quiz-table-listing').DataTable({});
        });
    </script>
{% endblock %}