{% extends '@Layout/Full/base.html.twig' %}

{% block body %}
    <div class="box box-primary">
        <div class="box-header with-border">
            <h3 class="box-title">{{ quiz.title|default('Untitled') }}</h3>
        </div>
        <div class="box-body">
            <p>{{ quiz.description }}</p>
        </div>
    </div>
    {% for question in quiz.questions %}
        <div class="box box-primary">
            <div class="box-header with-border">
                <h3 class="box-title">{{ question.title }}</h3>
            </div>
            <div class="box-header with-border">
                {{ question.text }}
            </div>
            <div class="box-body with-border">
                {% for key,response in question.responses %}
                    <label class="col-sm-2 control-label">

                    </label>
                    <label class="col-sm-10 control-label">
                        <div class="input-group">
                            {% if question.solution[key] is defined %}
                                <div class="bg-success">
                                    {{ response }}
                                </div>
                            {% else %}
                                {{ response }}
                            {% endif %}
                        </div>
                    </label>
                {% endfor %}
            </div>
            <div class="box-footer with-border">
                <div class="pull-right">
                    <a href="{{ path('app_admin_question_edit_edition', {'id': question.id}) }}" class="btn btn-info">Edit <i class="fa fa-edit"></i></a>
                    <a href="{{ path('app_admin_question_remove_removable', {'id': question.id}) }}" class="btn btn-info">Remove <i class="fa fa-trash"></i></a>
                </div>
            </div>
        </div>
    {% endfor %}
{% endblock %}