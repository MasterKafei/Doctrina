{% extends '@Layout/Page/Full/base.html.twig' %}

{% block body %}
    <div class="box box-info">
        <div class="box-header with-border">
            <h3 class="box-title">Edit question</h3>
        </div>
        {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}
        <div class="box-body">
            <div class="form-group">
                <label class="col-sm-2 control-label">{{ form_label(form.title) }}</label>
                <div class="col-sm-10">
                    {{ form_widget(form.title, {'attr': {'class': 'form-control'}} ) }}
                </div>
            </div>
            <div class="form-group" id="responses-fields-list" data-prototype="{{ form_widget(form.responses.vars.prototype)|e }}" data-widget-tags="
                {{ '<div class="form-group"></div>'|e }}"></div>
            <div class="form-group">
                <label class="col-sm-2 control-label">{{ form_label(form.text) }}</label>
                <div class="col-sm-10">
                    {{ form_widget(form.text, {'attr': {'class': 'form-control'}} ) }}
                </div>
            </div>
            {% set lastKey = 0 %}
            {% for key,response in form.responses %}
                {% set lastKey = key %}
                <div class="form-group" id="form-controller-{{ key }}">
                    <label class="col-sm-2 control-label">
                        {% if key != 0 %}
                            <a href="#" id="button-remove-{{ key }}" class="btn btn-danger remove-input-button" data="#form-controller-{{ key }}">
                                <i class="fa fa-minus" data="#form-controller-{{ key }}"></i>
                            </a>
                        {% else %}
                            <a href="#" class="add-another-collection-widget pul-right btn btn-info" data-placement="top" data-list="#responses-fields-list" data-toggle="tooltip" title="Add proposition">
                                <i class="fa fa-plus"></i>
                            </a>
                        {% endif %}
                    </label>
                    <label class="col-sm-10 control-label">
                        <div class="input-group">
                            <span class="input-group-addon">
                                {% if form.solution[key] is defined %}
                                    {{ form_widget(form.solution[key]) }}
                                {% else %}
                                    <input type="checkbox" id="question_creation_solution_{{ key }}" name="question_creation[solution][{{ key }}]" value="1"/>
                                {% endif %}
                            </span>
                            {{ form_widget(response) }}
                        </div>
                    </label>
                </div>
            {% endfor %}
        </div>
        <div class="box-footer">
            {{ form_row(form.save, {'attr': {'class': 'btn btn-info pull-right'}}) }}
        </div>
        {{ form_end(form) }}
    </div>
    <script>
        LAST_ELEMENT = {{ lastKey }};
    </script>
{% endblock %}

{% block javascripts %}
    <script src="{{ asset('assets/javascript/Page/Question/Edit/edit.js') }}"></script>
{% endblock %}