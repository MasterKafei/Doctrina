{% extends '@Layout/Page/Full/base.html.twig' %}

{% block header %}
    <h1>
        Category showing
        <small>Show category with all information</small>
    </h1>
    {% embed '@Layout/Component/Breadcrumb/breadcrumb_full.html.twig' %}

        {% set contents =
        [
        'Administration',
        'Category',
        'Showing'
        ] %}

        {% set links =
        [
        '#',
        path('app_admin_category_listing_list'),
        path('app_admin_category_showing_show', {'id': category.id})
        ] %}

        {% set icon = 'fa fa-folder-open' %}
    {% endembed %}
{% endblock %}

{% block body %}
    {% embed '@Layout/Component/Box/box_primary.html.twig' %}
        {% block header %}
            <h3>
                {{ category.title }}
                <small>{{ category.description }}</small>
            </h3>
        {% endblock %}

        {% block body %}
            {% for quiz in category.quizzes %}
                {% embed '@Layout/Component/Box/box_primary.html.twig' %}
                    {% block header %}
                        <h4>
                            {{ quiz.title }}
                            <small>{{ quiz.description }}</small>
                        </h4>
                    {% endblock %}

                    {% block body %}

                    {% endblock %}

                    {% block footer %}
                        <div class="btn-group pull-right">
                            <a href="{{ path('app_admin_quiz_showing_show', {'id': quiz.id}) }}"
                               class="btn btn-flat btn-info">Show <i class="fa fa-eye"></i></a>
                            <a href="{{ path('app_admin_quiz_edition_edit', {'id': quiz.id}) }}"
                               class="btn btn-flat btn-info">Edit <i class="fa fa-edit"></i></a>
                            <a href="{{ path('app_admin_quiz_removing_remove', {'id': quiz.id }) }}"
                               class="btn btn-flat btn-info">Remove <i class="fa fa-trash"></i></a>
                        </div>
                    {% endblock %}
                {% endembed %}
            {% endfor %}
        {% endblock %}

        {% block footer %}

        {% endblock %}
    {% endembed %}
{% endblock %}