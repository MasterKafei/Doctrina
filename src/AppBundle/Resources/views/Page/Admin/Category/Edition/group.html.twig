{% extends '@Layout/Page/Full/base.html.twig' %}

{% block header %}
    <h1>
        Category groups
        <small>Select the category groups</small>
    </h1>
    {% embed '@Layout/Component/Breadcrumb/breadcrumb_full.html.twig' %}
        {% set contents =
            [
                'Administration',
                'Category',
                'Edition',
                'Group'
            ] %}

        {% set links =
            [
                '#',
                path('app_admin_category_listing_list'),
                path('app_admin_category_edition_edit', {'id': category.id}),
                path('app_admin_category_edition_group', {'id': category.id})
            ] %}

        {% set icon = 'fa fa-folder-open' %}
    {% endembed %}
{% endblock %}

{% block body %}
    {% embed '@Layout/Component/Box/box_primary.html.twig' %}
        {% block head %}{{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}{% endblock %}

        {% block header %}<h3 class="box-title">Management of category groups</h3>{% endblock %}

        {% block body %}
            {% for group in form.groups %}
                <div class="form-group">
                    <div class="col-sm-2 control-label">
                        {{ form_label(group) }}
                    </div>
                    <label class="col-sm-10">
                        {{ form_widget(group) }}
                    </label>
                </div>
            {% endfor %}
        {% endblock %}

        {% block footer %}{{ form_row(form.save, {'attr': {'class': 'btn btn-primary btn-flat pull-right'}}) }}{% endblock %}

        {% block foot %}{{ form_end(form) }}{% endblock %}

    {% endembed %}
{% endblock %}