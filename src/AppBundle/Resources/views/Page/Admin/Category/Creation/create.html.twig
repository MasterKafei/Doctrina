{% extends '@Layout/Page/Full/base.html.twig' %}
{% import '@Layout/Component/Breadcrumb/breadcrumb.html.twig' as breadcrumb %}

{% block header %}
    <h1>
        Category creation
        <small>Create brand new category for your quizzes</small>
    </h1>
    {{ breadcrumb.full(
        [
            'Administration',
            'Category',
            'Creation'
        ],
        [
            '#',
            path('app_admin_category_listing_list'),
            path('app_admin_category_creation_create')
        ],
        'fa fa-folder-open'
    )
    }}
{% endblock %}

{% block body %}
    <div class="box box-info">
        <div class="box-header with-border">
            <h3 class="box-title">Create new category</h3>
        </div>
        {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}
            <div class="box-body">
                <div class="form-group">
                    <label class="col-sm-2 control-label">{{ form_label(form.title) }}</label>
                    <div class="col-sm-10">
                        {{ form_widget(form.title) }}
                    </div>
                </div>
                <div class="form-group">
                    <label for="inputPassword3" class="col-sm-2 control-label">{{ form_label(form.description) }}</label>
                    <div class="col-sm-10">
                        {{ form_widget(form.description) }}
                    </div>
                </div>
            </div>
            <!-- /.box-body -->
            <div class="box-footer">
                {{ form_widget(form.save) }}
            </div>
            <!-- /.box-footer -->
        {{ form_end(form) }}
    </div>
{% endblock %}