{% extends '@Layout/Page/Full/base.html.twig' %}

{% block header %}
    <h1>
        Course edition
        <small>Edit all existing course with information</small>
    </h1>
    {% embed '@Layout/Component/Breadcrumb/breadcrumb_full.html.twig' %}
        {% set contents = ['Administration', 'Course', 'Edition'] %}
        {% set links = ['#', path('app_admin_course_listing_list'), path('app_admin_course_edition_edit', {'id': course.id})] %}
        {% set icon = 'fa fa-folder-open' %}
    {% endembed %}
{% endblock %}

{% block body %}
    <div class="box box-info">
        {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}
        <div class="box-header with-border">
            <h3 class="box-title">Edit Course</h3>
        </div>
        <div class="box-body">
            <div class="form-group">
                <label class="col-sm-2 control-label">
                    <label for="course_creation_description" class="required">{{ form_label(form.title) }}</label>
                </label>
                <label class="col-sm-10">
                    {{ form_widget(form.title, {'attr': {'class': 'form-control'}}) }}
                </label>
            </div>
            <div class="form-group">
                <label class="col-sm-2 control-label">
                    <label for="course_creation_description" class="required">{{ form_label(form.description) }}</label>
                </label>
                <label class="col-sm-10">
                    {{ form_widget(form.description, {'attr': {'class': 'form-control'}}) }}
                </label>
            </div>
        </div>
        <div class="box-footer">
            {{ form_widget(form.save, {'label': 'Save'}) }}
        </div>
        {{ form_end(form) }}
    </div>
{% endblock %}