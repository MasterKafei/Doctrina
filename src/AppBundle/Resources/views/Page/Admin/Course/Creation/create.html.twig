{% extends '@Layout/Page/Full/base.html.twig' %}

{% block header %}
    <h1>
        Chapter Course
        <small>Create brand new course</small>
    </h1>
    {% embed '@Layout/Component/Breadcrumb/breadcrumb_full.html.twig' %}
        {% set contents = ['Administration', 'Course', 'Creation'] %}
        {#{% set links = ['#', path('app_admin_course_listing_list'), path('app_admin_course_creation_create')] %}#}
        {% set icon = 'fa fa-folder-open' %}
    {% endembed %}
{% endblock %}

{% block body %}
    <div class="box box-info">
        <div class="box-header with-border">
            <h3 class="box-title">Create new course</h3>
        </div>
        {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}
        <div class="box-body">
            <div class="form-group">
                <label class="col-sm-2 control-label">{{ form_label(form.title) }}</label>
                <div class="col-sm-10">
                    {{ form_widget(form.title) }}
                </div>
            </div>
        </div>
        <div class="form-group">
            <label for="inputPassword3" class="col-sm-2 control-label">{{ form_label(form.description) }}</label>
            <div class="col-sm-10">
                {{ form_widget(form.description) }}
            </div>
        </div>
        <!-- /.box-body -->
        <div class="box-footer">
            {{ form_widget(form.save) }}
        </div>
        <!-- /.box-footer -->
        {{ form_end(form) }}
    </div>
{% endblock %}