{% extends '@Layout/Page/Full/base.html.twig' %}

{% block sub_title %}{{ 'tab_sub_title.home'|trans({}, 'label') }}{% endblock sub_title %}

{% block content %}
    <div class="home-content">
        <div class="container">
            <div class="row">
                <div class="col-md-12 pt-5">
                    <h1 class="text-center big-title">{{ 'home.title'|trans({}, 'messages')|raw }}</h1>
                    <h3 class="text-center">{{ 'home.sub_title'|trans({}, 'messages') }}</h3>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <p class="text-justify p-5">
                        {{ 'home.description'|trans({}, 'messages') }}
                    </p>
                </div>
            </div>
        </div>
    </div>
{% endblock %}