{% extends '@Layout/Page/Full/base.html.twig' %}

{% block sub_title %}Tests{% endblock sub_title %}

{% block content %}
    <div class="content">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <h1 class="text-center p-5 big-title">{{ 'quiz.title'|trans({}, 'messages') }}</h1>
                </div>
            </div>
        </div>

        <div class="container">
            <div class="row">
                <div class="col-md-12 mb-5">
                    <form class="custom-form-big">
                        <input class="form-control" placeholder="{{ 'quiz.listing.search'|trans({}, 'placeholder') }}" name="search">
                    </form>
                </div>
            </div>
            <div class="row">
                {% for quiz in quizzes %}
                <a href="{{ path('app_quiz_session_creation_create', {'id': quiz.id}) }}" class="col-lg-6 text-center tests-item">
                    <div class="tests-image">
                        <img class="img-fluid" src="{{ vich_uploader_asset(quiz, 'image') }}">
                    </div>
                    <span>{{ quiz.title }}</span>
                </a>
                {% endfor %}
            </div>
            <div class="row mt-4">
                <div class="d-block mx-auto">
                    <div class="doctrina-pagination">
                        {% set pageMax = total/result_by_page %}
                        {% if pageMax < 1 %}
                            {% set pageMax = 1 %}
                        {% endif %}
                        {% for i in 1..pageMax if i <= 3 %}
                            <a href="#"{% if current_page == i %} class="active"{% endif %}>{{ i }}</a>
                        {% endfor %}

                            {% if pageMax > 6 %}
                                <a href="#">...</a>
                            {% endif %}

                        {% set firstEndingPage = pageMax - 3 %}
                        {% for i in firstEndingPage..pageMax if i >= 5 %}
                            <a href="#"{% if current_page == i %} class="active"{% endif %}>{{ i }}</a>
                        {% endfor %}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock content %}