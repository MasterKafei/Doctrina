{% extends '@Layout/Page/Full/base.html.twig' %}

{% block body %}

    {% embed '@Layout/Component/Box/box_primary.html.twig' %}

        {% block header %}
            <h3>{{ quiz.title }}</h3>
            <p>{{ quiz.description }}</p>
        {% endblock %}

        {% block body %}

            {% for answer in answers %}

                {% embed '@Layout/Component/Box/box_primary.html.twig' %}

                    {% block header %}
                        <h3>{{ answer.question.title }}</h3>
                        <p>{{ answer.question.text }}</p>
                    {% endblock %}

                    {% block body %}

                        {% for key,response in answer.question.responses %}
                                <label class="col-sm-2 control-label">
                                    <div class="pull-right">
                                        {% if answer.value[key] is defined and answer.question.solution[key] is defined %}
                                            <i class="fa fa-check"></i>
                                        {% elseif answer.value[key] is defined %}
                                            <i class="fa fa-times"></i>
                                        {% endif %}
                                    </div>
                                </label>

                                <label class="col-sm-10 control-label">
                                    {% if answer.question.solution[key] is defined %}
                                        <div class="bg-success">
                                            {{ response }}
                                        </div>
                                    {% else %}
                                        {{ response }}
                                    {% endif %}
                                </label>

                        {% endfor %}

                    {% endblock %}

                {% endembed %}

            {% endfor %}

        {% endblock %}

    {% endembed %}

{% endblock %}
