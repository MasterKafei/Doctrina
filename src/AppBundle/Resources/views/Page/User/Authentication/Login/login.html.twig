{% extends '@Layout/Page/Default/base.html.twig' %}

    {% block title %}Login{% endblock %}

    {% block stylesheets %}
        {% include '@Layout/Page/Default/stylesheets.html.twig' %}
    {% endblock %}

{% block body_html %}
    <body class="hold-transition login-page">
    <div class="login-box">
        <div class="login-logo">
            <a href={{ asset('app_home_home_index') }}><b>Qui</b>z</a>
        </div>
        <div class="login-box-body">
            <p class="login-box-msg">Sign in to start your session</p>

            <form action="{{ path('app_user_authentication_login_login') }}" method="post">
                {% if error.message is defined %}
                    <div class="alert alert-danger alert-dismissible">
                        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">Ã—</button>
                        {{ error.message }}
                    </div>
                {% endif %}
                <div class="form-group has-feedback">
                    <input type="text" class="form-control" placeholder="Username" id="username" name="_username" value="{{ last_username }}" />
                    <span class="glyphicon glyphicon-user form-control-feedback"></span>
                </div>
                <div class="form-group has-feedback">
                    <input type="password" class="form-control" placeholder="Password" id="password" name="_password" />
                    <span class="glyphicon glyphicon-lock form-control-feedback"></span>
                </div>
                <div class="row">
                    <div class="col-xs-8">
                        <div class="checkbox icheck">
                            <label>
                                <div class="icheckbox_square-blue" aria-checked="false" aria-disabled="false"
                                     style="position: relative;">
                                    <input type="checkbox" id="remember_me" name="_remember_me" checked
                                                                        style="position: absolute; top: -20%; left: -20%; display: block; width: 140%; height: 140%; margin: 0px; padding: 0px; background: rgb(255, 255, 255); border: 0px; opacity: 0;">
                                    <ins class="iCheck-helper"
                                         style="position: absolute; top: -20%; left: -20%; display: block; width: 140%; height: 140%; margin: 0px; padding: 0px; background: rgb(255, 255, 255); border: 0px; opacity: 0;"></ins>
                                </div>
                                Remember Me
                            </label>
                        </div>
                    </div>
                    <!-- /.col -->
                    <div class="col-xs-4">
                        <button type="submit" class="btn btn-primary btn-block btn-flat">Sign In</button>
                    </div>
                    <!-- /.col -->
                </div>
            </form>

            <div class="social-auth-links text-center">
                <p>- OR -</p>
                <a href="#" class="btn btn-block btn-social btn-facebook btn-flat"><i class="fa fa-facebook"></i> Sign
                    in using
                    Facebook</a>
                <a href="#" class="btn btn-block btn-social btn-google btn-flat"><i class="fa fa-google-plus"></i> Sign
                    in using
                    Google+</a>
            </div>
            <a href="#">I forgot my password</a><br>
            <a href="{{ path('app_user_authentication_registration_register') }}" class="text-center">Register a new membership</a>

        </div>
    </div>


    {% block javascripts %}
        {% include '@Layout/Page/Default/javascripts.html.twig' %}
    {% endblock %}

    </body>
{% endblock %}