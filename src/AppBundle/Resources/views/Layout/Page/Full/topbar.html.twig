<header class="main-header">

    <a href="{{ path('app_home_home_index') }}" class="logo">
        <span class="logo-mini"><b>QZ</b></span>
        <span class="logo-lg"><b>Quiz</b></span>
    </a>

    <nav class="navbar navbar-static-top">
        <!-- Sidebar toggle button-->
        <a href="#" class="sidebar-toggle" data-toggle="push-menu" role="button">
            <span class="sr-only">Toggle navigation</span>
        </a>
        <!-- Navbar Right Menu -->
        <div class="navbar-custom-menu">
            <ul class="nav navbar-nav">
                {% if app.user is defined and app.user is not null %}
                    <li class="dropdown user user-menu">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                            <span class="hidden-xs">
                                    {{ app.user.username }}
                            </span>
                        </a>
                        <ul class="dropdown-menu">
                            <li class="user-header">

                                <p>
                                    {{ app.user.username }}
                                </p>
                            </li>
                            <li class="user-footer">
                                <div class="pull-left">
                                    <a href="#" class="btn btn-default btn-flat">Profile</a>
                                </div>
                                <div class="pull-right">
                                    <a href="{{ path('app_user_authentication_logout_logout') }}" class="btn btn-default btn-flat">Login out</a>
                                </div>
                            </li>
                        </ul>
                    </li>
                {% else %}
                    <li>
                        <a href="{{ path('app_user_authentication_login_login') }}">Login</a>
                    </li>
                    <li>
                        <a href="{{ path('app_user_authentication_registration_register') }}">Register</a>
                    </li>
                {% endif %}
            </ul>
        </div>

    </nav>
</header>